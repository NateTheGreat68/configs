function dj {
    if [ -z "$VIRTUAL_ENV" ]
    then
        echo "No VIRTUALENV active (\$VIRTUAL_ENV not set)."
        return 1
    fi
    if [ -z "$PROJECT_HOME" ]
    then
        echo "\$PROJECT_HOME not set."
        return 2
    fi

    manage="$(find ""$PROJECT_HOME/$(basename ""$VIRTUAL_ENV"")"" -name manage.py)"

    if [ "$#" -eq 0 ]
    then
        "$manage" runserver 0.0.0.0:8000
    else
        "$manage" "$@"
    fi
}
